{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "lib": ["ESNext", "DOM"],
      "moduleResolution": "Bundler",
      "isolatedModules": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src"
    },
    "types": ["vite/client", "node"],
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  